{
  "name": "Department",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Department name"
    },
    "code": {
      "type": "string",
      "description": "Short code for department"
    },
    "description": {
      "type": "string",
      "description": "Department description"
    },
    "head_of_department": {
      "type": "string",
      "description": "Faculty ID of department head"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive"
      ],
      "default": "active"
    }
  },
  "required": [
    "name",
    "code"
  ]
}
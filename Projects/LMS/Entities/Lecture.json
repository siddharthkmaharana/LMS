{
  "name": "Lecture",
  "type": "object",
  "properties": {
    "course_assignment_id": {
      "type": "string",
      "description": "Course assignment ID"
    },
    "course_id": {
      "type": "string"
    },
    "faculty_id": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "description": "Lecture topic"
    },
    "description": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "start_time": {
      "type": "string",
      "description": "Start time (HH:MM)"
    },
    "end_time": {
      "type": "string",
      "description": "End time (HH:MM)"
    },
    "room": {
      "type": "string"
    },
    "lecture_number": {
      "type": "number",
      "description": "Sequential lecture number"
    },
    "materials": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "scheduled",
        "completed",
        "cancelled",
        "rescheduled"
      ],
      "default": "scheduled"
    },
    "attendance_locked": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "course_assignment_id",
    "course_id",
    "faculty_id",
    "title",
    "date",
    "start_time",
    "end_time"
  ]
}